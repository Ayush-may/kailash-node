    <section id="contact-us" class="mx-3 mx-lg-auto"> 
    <h2>Contact Us</h2>
    <p class="text-center text-secondary" style="font-size: 1rem;">
      We would be delighted to hear from you. Please fill out the form below to get in touch with us.
    </p>

    <form action="/index/submit-contact-form" method="POST">
      <% if (typeof req.query.message_type !== 'undefined' || typeof req.query.message_text !== 'undefined'  ){ %>
        <div class="alert alert-<%= req.query.message_type %> text-dark  ">
            <%= req.query.message_text %>
        </div>
      <% } %>
      <div class="form-group">
        <label for="name">Full Name:</label>
        <input type="text" id="name" name="full_name" class="form-control" required />
      </div>

      <div class="form-group">
        <label for="email">Email Address:</label>
        <input type="email" id="email" name="email_address" class="form-control" required />
      </div>
      <div class="form-group">
        <label for="mobile">Mobile Number:</label>
        <input type="mobile" id="mobile" name="mobile" class="form-control" required />
      </div>

      <div class="form-group">
        <label for="message">Your Message:</label>
        <textarea id="message" name="message" rows="4" class="form-control" required></textarea>
      </div>

      <button type="submit" class="btn btn-success w-100" style="margin-bottom: 10%;">Send Message</button>
    </form>
  </section>