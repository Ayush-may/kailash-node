<link rel="stylesheet" href="/stylesheets/service.css" />


<div class="services mt-5 mt-md-5">
    <h2 class="display-3 fw-bold">Our Services</h2>
    <div class="d-flex justify-content-center gap-4 mt-4" style="flex-wrap: wrap;">
        <% service.forEach(service => { %>
            <div class="card" style="max-width: 600px;">
                <div class="img-box">
                    <img src="<%= service.image_url %>" alt="<%= service.title %>" />
                </div>
                <div class="card-content">
                    <h3><%= service.title %></h3>
                    <p><%= service.description %></p>
                    <!-- Dynamic link to each service's details page -->
                    <a href="/index/service/<%= service.serviceid %>" class="btn">Learn More</a>
                </div>
            </div>
            
            <div class="card" style="max-width: 600px;">
                <div class="img-box">
                    <img src="<%= service.image_url %>" alt="<%= service.title %>" />
                </div>
