<style>
    /* styles.css */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f7fc;
        color: #333;
    }

    .form-section {
        max-width: 600px;
        margin: 0 auto;
        margin-top: 110px;
        margin-bottom: 50px;
        padding: 20px;
        background-color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    form {
        display: flex;
        flex-direction: column;
    }

    input,
    select,
    textarea {
        margin-bottom: 1rem;
    }

    label {
        font-weight: bold;
        margin-bottom: 5px;
    }

    footer {
        text-align: center;
        padding: 20px;
        background-color: #333;
        color: white;
    }
</style>

<link rel="stylesheet" href="/stylesheets/style.css" />
<section class="form-section mx-3 mx-lg-auto">
    <h1 class="text-center fw-bold">Join us</h1>
    <form action="/index/submit-join-us" method="POST" enctype="multipart/form-data">
        <% if (typeof req.query.message_type !=='undefined' || typeof req.query.message_text !=='undefined' ){ %>
            <div class="alert alert-<%= req.query.message_type %> text-dark  ">
                <%= req.query.message_text %>
            </div>
            <% } %>
                <label class="d-none" for="id">Application ID:</label>
                <input type="hidden" id="id" name="id" placeholder="Enter application ID">

                <label for="name">Full Name:</label>
                <input type="text" id="name" name="name" class="form-control" placeholder="Enter your full name">

                <label for="email">Email Address:</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email address">

                <label for="mobile">Mobile number:</label>
                <input type="mobile" id="mobile" name="mobile" class="form-control" placeholder="Enter your mobile mobile">

                <label for="position">Position Applied For:</label>
                <select id="position" name="position" class="form-control">
                    <option value="" selected disabled>Select Position</option>
                    <option value="developer">Web Developer</option>
                    <option value="designer">UI/UX Designer</option>
                    <option value="marketing">Marketing Specialist</option>
                    <option value="support">Customer Support</option>
                </select>

                <label for="resume">Upload Resume:</label>
                <input type="file" id="resume" name="resume" class="form-control" accept=".pdf,.doc,.docx">

                <label for="application_data">Application Data:</label>
                <textarea id="application_data" name="application_data" rows="5" class="form-control"
                    placeholder="Why do you want to join us?"></textarea>

                <button type="submit" class="btn btn-success">Submit Application</button>
    </form>
</section>