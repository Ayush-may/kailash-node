<style>
  /* Header Styles */
  
  /* About Section Styles */
  #about {
    padding: 100px 20px;
    background-color: #f0f4f8;
    /* Light background color for the section */
    text-align: center;
  }


  .about-content {
    max-width: 800px;
    margin: 0 auto;
    /* Center the content */
    padding: 20px;
  }

  .about-text {
    background-color: #ffffff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    /* Soft shadow for a subtle 3D effect */
  }

  .about-text p {
    font-size: 1.1rem;
    color: #555;
    /* Medium color for text */
    line-height: 1.6;
  }

  .about-text p strong {
    font-size: 1.2rem;
    color: #4bcffa;
    /* Accent color for the title text */
  }
</style>

<!-- About Section -->
<section id="about" style="padding-top: 100px;">
  <h1 class="display-4 fw-bold">ABOUT US</h1>
  <div class="about-content">
    <div class="about-text">
      <p><strong>
          <%= aboutData.title %>
        </strong></p>
      <p class="text-secondary">
        <%= aboutData.description %>
      </p> <!-- This will display the description -->
    </div>
  </div>
</section>