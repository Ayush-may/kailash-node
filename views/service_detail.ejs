<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Explore Our Services</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <style>
    /* Global Styles */
    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f9ff;
      color: #333;
    }

    h1, h2 {
      text-align: center;
      margin: 10px 0;
      color: #0056b3;
    }

    h1 {
      font-size: 2.5rem;
    }

    h2 {
      font-size: 1.8rem;
      color: #003f7d;
      margin-bottom: 20px;
    }

    /* Card Container */
    .section-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      padding: 5%;
      justify-items: center;
      background-color: #f9f9f9;
    }

    /* Each individual card */
    .section {
      background-color: #ffffff;
      border-radius: 12px;
      overflow: hidden;
      transition: box-shadow 0.3s ease, transform 0.3s ease;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      border: 1px solid #ddd;
    }

    .section:hover {
      transform: translateY(-10px);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    }

    /* Image Styling */
    .section img {
      width: 100%;
      height: 250px;
      object-fit: cover;
      border-radius: 12px 12px 0 0;
    }

    /* Section Content */
    .section-content {
      padding: 20px;
      text-align: center;
    }

    .section-title {
      font-size: 1.8rem;
      font-weight: bold;
      color: #0056b3;
      margin-bottom: 10px;
    }

    .section-description {
      font-size: 1rem;
      color: #555;
      line-height: 1.6;
      margin-bottom: 20px;
    }

    /* Learn More Button */
    .section-action a {
      display: inline-block;
      text-decoration: none;
      background-color: #0056b3;
      color: #ffffff;
      padding: 12px 24px;
      border-radius: 6px;
      font-size: 1rem;
      font-weight: bold;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .section-action a:hover {
      background-color: #003f7d;
      transform: scale(1.1);
    }

    /* Responsiveness */
    @media screen and (max-width: 768px) {
      h1 {
        font-size: 2rem;
      }
      h2 {
        font-size: 1.5rem;
      }
      .section-container {
        padding: 5% 2%;
        gap: 15px;
      }
      .section-title {
        font-size: 1.4rem;
      }
      .section-description {
        font-size: 0.9rem;
      }
      .section-action a {
        font-size: 0.9rem;
        padding: 8px 15px;
      }
    }

    @media screen and (max-width: 480px) {
      h1 {
        font-size: 1.8rem;
      }
      h2 {
        font-size: 1.2rem;
      }
      .section-container {
        grid-template-columns: 1fr;
        padding: 5%;
      }
      .section-content {
        padding: 15px;
      }
      .section-title {
        font-size: 1.1rem;
      }
      .section-description {
        font-size: 0.85rem;
      }
    }
  </style>
</head>
<body>
  <h1>Explore Our Services</h1>
  <h2>Discover Our Course Offerings</h2>
  <div class="section-container"  style="margin-bottom: 5%;">
    <% cards.forEach(card => { %>
      <div class="section">
        <!-- Section Image -->
        <a href="/details">
          <img src="<%= card.card_image_url %>" alt="<%= card.card_title %>">
        </a>
        
        <!-- Section Content -->
        <div class="section-content">
          <!-- Section Title -->
          <h2 class="section-title"><%= card.card_title %></h2>

          <!-- Section Description -->
          <p class="section-description"><%= card.card_description %></p>

          <!-- Learn More Button -->
          <div class="section-action">
            <a href="/details">Learn More</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>
