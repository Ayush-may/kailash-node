<style>
  footer {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: flex-start;
    gap: 20px;
  }

  .footer-logo img {
    max-width: 100%;
    height: auto;
  }

  .footer-links,
  .footer-contact,
  .footer-social {
    flex: 1;
    min-width: 200px;
  }

  .footer-links h3,
  .footer-contact h3,
  .footer-social h3 {
    font-size: 1.2rem;
    margin-bottom: 10px;
    color: #f39c12;
    text-transform: uppercase;
  }

  .footer-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links ul li {
    margin: 8px 0;
  }

  .footer-links ul li a {
    text-decoration: none;
    color: #fff;
    transition: color 0.3s ease;
  }

  .footer-links ul li a:hover {
    color: #f39c12;
  }

  .footer-contact p {
    margin: 5px 0;
    font-size: 0.9rem;
  }

  .footer-social a {
    margin: 0 8px;
    display: inline-block;
  }

  .footer-social img {
    width: 28px;
    height: 28px;
    transition: transform 0.3s ease;color: #000;
  }

  .footer-social img:hover {
    transform: scale(1.2);

  }

  /* Footer Bottom Bar */
  footer .p-0.m-0.w-100 {
    border-top: 1px solid #444;
    margin-top: 20px;
    padding-top: 10px;
    font-size: 0.8rem;
    color: #aaa;
  }

  footer .p-0.m-0.w-100:hover {
    color: #f39c12;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column; /* Stack items vertically */
      text-align: center;
    }

    .footer-logo {
      margin-right: 0;
      margin-left: 0;
      margin-top: 20px;
    }

    .footer-links,
    .footer-contact,
    .footer-social {
      flex: none;
      margin-bottom: 20px; /* Add spacing between sections */
    }

    .footer-links h3,
    .footer-contact h3,
    .footer-social h3 {
      font-size: 1rem;
    }

    .footer-links ul li,
    .footer-contact p {
      font-size: 0.85rem;
      margin-left: 35%;
    }

    .footer-social a {
      margin: 5px;
    }

    .footer-social img {
      width: 24px;
      height: 24px;
    }
  }

  /* Mobile View Priority */
  @media (max-width: 576px) {
    .footer-content {
      flex-direction: column; /* Stack sections vertically */
      align-items: center;
      text-align: center;
    }

    .footer-links ul {
      padding: 0;
      text-align: left;
    }

    .footer-links ul li a {
      font-size: 0.85rem;
    }

    .footer-social img {
      width: 24px;
      height: 24px;
    }

    .footer-contact p {
      font-size: 0.85rem;
    }
  }
</style>

