<style>
  /* Header Styles */
  header {
    background-color: #6D214F;
    padding: 20px;
    z-index: 99999;
    position: relative;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 999999;
  }

  nav img {
    width: 120px;
    height: 60px;
    margin-left: 10px;
  }

  nav .d-flex {
    gap: 1rem;
  }

  nav a {
    color: white;
    text-decoration: none;
    font-size: 16px;
    padding: 5px 10px;
    transition: color 0.3s ease;
  }

  nav a:hover {
    color: #f5a623;
  }

  /* Desktop Menu */
  .d-md-flex {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  /* Hamburger Icon Style */
  .hamburger-icon {
    display: none;
    font-size: 30px;
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    position: absolute;
    right: 20px;
    top: 20px;
    z-index: 1000;
  }

  /* Mobile Menu */
  .mobile-menu {
    display: none;
    position: absolute;
    top: 80px;
    left: 0;
    width: 100%;
    background-color: #6D214F;
    z-index: 9999;
    padding: 10px 0;
  }

  .mobile-menu a {
    color: white;
    text-decoration: none;
    font-size: 18px;
    display: block;
    padding: 10px;
    border-bottom: 1px solid #fff;
  }

  .mobile-menu a:hover {
    background-color: #f5a623;
  }

  /* Media Query for Mobile */
  @media (max-width: 768px) {
    .hamburger-icon {
      display: block;
    }

    .d-md-flex {
      display: none;
    }

    /* Mobile Menu */
    .mobile-menu {
      display: block;
    }

    .mobile-menu a {
      font-size: 16px;
    }
  }

  /* Adjust logo size for mobile */
  @media (max-width: 480px) {
    nav img {
      width: 100px;
      height: 50px;
    }

    nav a {
      font-size: 14px;
    }
  }
</style>

<header class="py-4">
  <nav class="d-flex justify-content-between">
    <!-- Logo -->
    <div>
      <img src="/images/mvlogo.png" style="width: 120px; height: 60px;" alt="Company Logo">
    </div>
    <!-- Desktop Menu -->
    <div class="d-none d-md-flex align-items-center gap-3">
      <div class="d-flex gap-3" style="font-size: medium;">
        <a href="/index">Home</a>
        <a href="/index/about">About us</a>
        <a href="/index/service">Services</a>
        <a href="/index/join_us">Career</a>
        <a href="/index/contact_us">Contact us</a>
        <a href="/index/training">Training</a>
      </div>
    </div>
    <!-- Hamburger Menu for Mobile -->
    <button class="hamburger-icon d-md-none" onclick="toggleMobileMenu()">â˜°</button>
  </nav>
  
  <!-- Mobile Menu -->
  <div class="mobile-menu d-md-none" id="mobileMenu">
    <a href="/index">Home</a>
    <a href="/index/about">About us</a>
    <a href="/index/service">Services</a>
    <a href="/index/join_us">Career</a>
    <a href="/index/contact_us">Contact us</a>
    <a href="/index/blog">Blog</a>
    <a href="/index/training">Training</a>
  </div>
</header>

<script>
  // Function to toggle the visibility of the mobile menu
  function toggleMobileMenu() {
    const mobileMenu = document.getElementById('mobileMenu');
    mobileMenu.style.display = (mobileMenu.style.display === 'block') ? 'none' : 'block';
  }
</script>
