<body class="p-3 d-flex flex-column w-100 ">
  <header class="w-100">
    <h1 class="p-4 text-center bg-dark text-white">Admin Teams Edit</h1>
  </header>
  <main class="d-flex justify-content-center">
    <form class="flex-grow-1 d-flex flex-column align-items-center" method="post">
      <table class="w-25" style="margin:0 auto;">
        <thead>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <tr>
            <td>id</td>
            <td>
              <input type="text" class="form-control" name="id" value="<%= team.id %>" readonly>
            </td>
          </tr>
          <tr>
            <td>Full Name</td>
            <td>
              <input type="text" class="form-control" name="full_name" value="<%= team.full_name %>">
            </td>
          </tr>
          <tr>
            <td>Position</td>
            <td>
              <input type="text" class="form-control" name="position" value="<%= team.position %>">
            </td>
          </tr>
          <tr>
            <td>image url</td>
            <td>
              <input type="text" class="form-control" name="image_url" value="<%= team.image_url %>">
            </td>
          </tr>
        </tbody>
      </table>
      <button class="mt-2 btn btn-success w-25">Update</button>
      <button type="button" class="mt-2 btn btn-info w-25"
        onclick="window.location.href='/admin/team'"
      >go back</button>
    </form>
