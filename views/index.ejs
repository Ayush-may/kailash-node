<script>
  document.addEventListener("DOMContentLoaded", () => {
    const counters = document.querySelectorAll(".box h3"); // Select all h3 elements

    counters.forEach(counter => {
      const updateCounter = () => {
        const target = +counter.getAttribute("data-target"); // Get target value
        const current = +counter.innerText; // Current displayed number
        const increment = Math.ceil(target / 200); // Increment value (adjust speed)

        if (current < target) {
          counter.innerText = current + increment; // Update counter
          setTimeout(updateCounter, 20); // Repeat every 20ms (adjust speed)
        } else {
          counter.innerText = target; // Set the final value
        }
      };

      updateCounter(); // Start the animation
    });
  });
</script>

