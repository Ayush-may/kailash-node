<script>
  let currentIndex = 0;
  const reviewsWrapper = document.querySelector('.reviews-wrapper');
  const totalReviews = document.querySelectorAll('.review-item').length;
  const reviewWidth = document.querySelector('.review-item').offsetWidth + 20;

  function autoScroll() {
    currentIndex++;
    if (currentIndex >= totalReviews) {
      currentIndex = 0;
    }
    reviewsWrapper.style.transform = `translateX(-${currentIndex * reviewWidth}px)`;
  }

  setInterval(autoScroll, 3000);

  document.getElementById('prevBtn').addEventListener('click', () => {
    currentIndex = (currentIndex === 0) ? totalReviews - 1 : currentIndex - 1;
    reviewsWrapper.style.transform = `translateX(-${currentIndex * reviewWidth}px)`;
  });

  document.getElementById('nextBtn').addEventListener('click', () => {
    currentIndex = (currentIndex === totalReviews - 1) ? 0 : currentIndex + 1;
    reviewsWrapper.style.transform = `translateX(-${currentIndex * reviewWidth}px)`;
  });
</script>

